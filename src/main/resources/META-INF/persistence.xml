<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
    <persistence-unit name="unit" transaction-type="RESOURCE_LOCAL">
        <class>pl.nullpointerexception.hibernate.entity.Product</class>
        <class>pl.nullpointerexception.hibernate.entity.Review</class>
        <class>pl.nullpointerexception.hibernate.entity.Category</class>
        <class>pl.nullpointerexception.hibernate.entity.Attribute</class>
        <class>pl.nullpointerexception.hibernate.entity.Customer</class>
        <class>pl.nullpointerexception.hibernate.entity.Order</class>
        <class>pl.nullpointerexception.hibernate.entity.OrderRow</class>
        <class>pl.nullpointerexception.hibernate.entity.batch.BatchReview</class>
        <class>pl.nullpointerexception.hibernate.entity.CustomerDetails</class>
        <class>pl.nullpointerexception.hibernate.entity.BaseProduct</class>
        <class>pl.nullpointerexception.hibernate.entity.RealProduct</class>
        <class>pl.nullpointerexception.hibernate.entity.VirtualProduct</class>

        <properties>
            <property name="hibernate.archive.autodetection" value="class, hbm"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost/kurshibernate?useUnicode=true&amp;serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="test" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.jdbc.batch_size" value="5" />
            <property name="hibernate.order_updates" value="true" />
            <property name="hibernate.order_inserts" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
